{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "site-template"
    ],
    "globalMetadata": {
      "_appName": "Watson",
      "_appTitle": "Watson Docs",
      "_appFooter": "<a href='https://github.com/XR-Solutions' style='text-decoration: unset; color: inherit'>XR Solutions</a>",
      "_appLogoPath": "./images/site/watson-logo.png",
      "_appFaviconPath": "./images/site/favicon.ico",
      "_enableSearch": true,
      "pdf": true
    }
  }
}