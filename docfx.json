{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "site-template"
    ],
    "globalMetadata": {
      "_appName": "Watson",
      "_appTitle": "Watson Docs",
      "_appLogoPath": "./images/site/watson-logo.png",
      "_appFaviconPath": "./images/site/favicon.ico",
      "_enableSearch": true,
      "pdf": true
    },
    "fileMetadata": {
      "_appFooter": {
        "en/**/*.md": "<a onClick='changeLanguage(`en`)' style='text-decoration: unset; color: inherit; margin-right: 15px; cursor: pointer;'>English</a> <a onClick='changeLanguage(`nl`)' style='text-decoration: unset; color: inherit; cursor: pointer;'>Dutch</a>",
        "nl/**/*.md": "<a onClick='changeLanguage(`en`)' style='text-decoration: unset; color: inherit; margin-right: 15px; cursor: pointer;'>Engels</a> <a onClick='changeLanguage(`nl`)' style='text-decoration: unset; color: inherit; cursor: pointer;'>Nederlands</a>"
      }
    }
  }
}